    ident          Text
    email          Text
    fullName       Text Maybe
    desc           Textarea Maybe
    admin          Bool default=false
    employment     Employment Maybe
    blocked        Bool default=false
    emailPublic    Bool default=false
    created        UTCTime
    UniqueUser ident
    UniqueEmail email
    deriving Show Typeable
